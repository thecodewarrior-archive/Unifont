<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane fx:id="root" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" prefHeight="300.0" prefWidth="500.0" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="co.thecodewarrior.unifontgui.controllers.Main">
   <children>
      <VBox prefHeight="200.0" prefWidth="100.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <MenuBar>
              <menus>
                <Menu mnemonicParsing="false" text="File">
                  <items>
                    <MenuItem mnemonicParsing="false" onAction="#menuOpenFile" text="Open" />
                        <MenuItem mnemonicParsing="false" onAction="#menuSaveFile" text="Save" />
                  </items>
                </Menu>
                  <Menu mnemonicParsing="false" text="Font">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#menuAutoKern" text="Auto-kern" />
                        <MenuItem mnemonicParsing="false" onAction="#menuReloadUnicode" text="Reload Unicode Character Database" />
                    </items>
                  </Menu>
                  <Menu mnemonicParsing="false" text="Window">
                    <items>
                      <MenuItem mnemonicParsing="false" onAction="#menuOpenPreview" text="Open Preview" />
                    </items>
                  </Menu>
              </menus>
            </MenuBar>
            <HBox fx:id="header" alignment="CENTER" prefWidth="200.0">
               <children>
                  <TextField fx:id="prefixField" alignment="CENTER" onAction="#prefixChanged" promptText="0000xx" />
               </children>
            </HBox>
            <ScrollPane fitToHeight="true" fitToWidth="true" hbarPolicy="NEVER" maxWidth="1.7976931348623157E308">
               <content>
                  <FlowPane fx:id="flowPane" maxHeight="1.7976931348623157E308" maxWidth="1.7976931348623157E308" />
               </content>
            </ScrollPane>
         </children>
      </VBox>
   </children>
</AnchorPane>
